<article class ="glass p-4">
      <header class="pb-4 mb-4">
        <h2 class="display-4">{{ title }}</h1>
        {% block extraArticleHeader %}
          {% set wc = content | striptags | wordcount %}
          {% set wPerMinute = (wc / 240) + 1 %}
          <aside class="fw-bold">
            {{ wPerMinute | round }}
            min read.
          </aside>
          <p>Published
            <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
          </p>
          {%- for tag in tags | filterTagList -%}
            {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
            <a href="{{ tagUrl | url }}" class="btn btn-outline-light btn-sm me-2">{{ tag }}</a>
          {%- endfor %}

        {% endblock %}
      </header>
      <p class="lead h-2 fw-bold">
        {{ summary }}
      </p>
      {{ content | safe }}
    </article>
